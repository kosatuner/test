<%= form_for(@stock) do |f| %>
  <% if @stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

      <ul>
      <% @stock.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :ticker %><br>
    <%= f.text_field :ticker %>
  </div>
  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br>
    <%= f.text_field :descripcion %>
  </div>
  
  <div class="field">
    <%= f.label :market_id %><br>
    <% @market = Market.all %>
    <%= f.select :market_id, options_from_collection_for_select(Market.all,"id","nombre")  %>
    
  </div>
  <div class="field">
    <%= f.label :idicator_type %><br>
    <% IndicatorType.all.each do |indic| %>
    <%= check_box_tag "indic[]", indic.id %> <%= indic.nombre %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>